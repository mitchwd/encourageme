<%- model_class = Letter -%>
<div class="page-header">
  <h1><%=t '.title', :default => Letter %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:content) %></dt>
      <dd><pre class="prettyprint"><%= @letter.content %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:status) %></dt>
      <dd><pre class="prettyprint"><%= @letter.status %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:read_count) %></dt>
      <dd><pre class="prettyprint"><%= @letter.read_count %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:thanks_count) %></dt>
      <dd><pre class="prettyprint"><%= @letter.thanks_count %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              letters_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_letter_path(@letter), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              letter_path(@letter),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

